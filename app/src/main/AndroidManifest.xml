<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="we.chrisoli.lifestyletracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"  />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:theme="@style/Theme.LifestyleTracker"
        tools:replace="android:icon,android:roundIcon,android:theme">
        <activity
            android:name="we.chrisoli.lifestyletracker.view.LoadingActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.LifestyleTracker.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="we.chrisoli.lifestyletracker.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.LifestyleTracker.NoActionBar" />
    </application>

</manifest>